# Environment Configuration
DATABASE_URL=sqlite:///./finance_assistant.db
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# AI Model Configuration
HUGGINGFACE_MODEL=distilbert-base-uncased
MODEL_CACHE_DIR=./trained_models
SPACY_MODEL=en_core_web_sm

# UPI/Payment Configuration (Mock)
RAZORPAY_KEY_ID=mock_key_id
RAZORPAY_KEY_SECRET=mock_key_secret
UPI_WEBHOOK_SECRET=mock_webhook_secret

# API Configuration
CORS_ORIGINS=["http://localhost:3000", "http://localhost:3001"]
API_PREFIX=/api/v1

# ML Model Parameters
TRANSACTION_CATEGORIES=["food", "transport", "shopping", "entertainment", "bills", "healthcare", "investment", "other"]
LSTM_SEQUENCE_LENGTH=30
LSTM_BATCH_SIZE=32
LSTM_EPOCHS=50

# Clustering Parameters
N_CLUSTERS=8
CLUSTERING_FEATURES=["amount", "hour", "day_of_week", "merchant_category"]

# Production Settings (change for deployment)
DEBUG=True
ENVIRONMENT=development